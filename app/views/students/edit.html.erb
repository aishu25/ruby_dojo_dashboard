<h1>Editing <%= @student.first_name %> <%= @student.last_name %></h1>
<h1>Inside form </h1>
<form action="/dojos/<%= @dojo.id %>/students/<%= @student.id%>" method="post">
	<input type="hidden" name="_method" value="patch">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	First_name : <input type="text" name="first_name" value="<%= @student.first_name %>">
	Last_name : <input type="text" name="last_name" value="<%= @student.last_name %>">
	Email Address : <input type="text" name="email" value="<%= @student.email %>">
	Dojo : 
		<select name="dojo_locations">
			<option value="<%= @dojo.id %>" selected><%= @dojo.branch %></option>
			<% @dojos.each do |dojo| %>
				<option value="<%= dojo.id %>"><%= dojo.branch %></option>
			<% end %>
		</select>


	<input type="submit" value="Update">
	<a href="/dojos/<%= @dojo.id %>">Home</a>
</form>
