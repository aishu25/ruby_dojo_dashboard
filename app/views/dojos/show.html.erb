<% if flash[:error] %>
	<div>
		<ul>
			<%= flash[:error].each do |msg|  %>
		    	<li><%= msg %></li>
		    <% end %>
		</ul>
	</div>
<% end %>

<h1>Dojo names</h1>

<h1><%= @dojo.branch %></h1>
<p>Address: <%= @dojo.street %></p>
<p>City: <%= @dojo.city %></p>
<p>State: <%= @dojo.states %></p>

<h1>Student Roaster</h1>
<table style="border: 1px solid black;border-collapse: collapse;">
	<thead style="border: 1px solid black;border-collapse: collapse;">
		<tr>
			<td style="border: 1px solid black;border-collapse: collapse;">First Name:</td>
			<td style="border: 1px solid black;border-collapse: collapse;">Last Name:</td>
			<td style="border: 1px solid black;border-collapse: collapse;">Email</td>
			<td style="border: 1px solid black;border-collapse: collapse;">Action</td>
		</tr>
	</thead>
	<tbody>
		<% @students.each do |student| %>
			<tr>
				<td style="border: 1px solid black;border-collapse: collapse;"><%= student.first_name %></td>
				<td style="border: 1px solid black;border-collapse: collapse;"><%= student.last_name %></td>
				<td style="border: 1px solid black;border-collapse: collapse;"><%= student.email %></td>
				<td style="border: 1px solid black;border-collapse: collapse;"><a href="/dojos/<%= @dojo.id %>/students/<%= student.id %>">Show</a>/<a href="/dojos/<%= @dojo.id %>/students/<%= student.id %>/edit">Edit</a>/<a href="/dojos/<%= @dojo.id %>/students/<%= student.id %>" data-method="delete">Destory</a></td>
			</tr>
		<% end %>
	</tbody>

</table>

<a href="/dojos">Home</a>
<a href="/dojos/<%= @dojo.id %>/students/new">Add Student</a>



